      <param name="mass"            type="double"  value="$(arg mass)"/>
      <param name="k0"              type="double"  value="10"/>
      <param name="rate"            type="double"  value="$(arg rate)"/>
      <param  name="Ixx"            type="double"  value="$(arg Ixx)"/>
      <param  name="Iyy"            type="double"  value="$(arg Iyy)"/>
